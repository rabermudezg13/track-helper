# Ejemplo de configuraci贸n para agregar a tu nginx principal del servidor
# Este archivo es solo un ejemplo - NO se usa directamente
# Copia este contenido a tu configuraci贸n de nginx principal si prefieres usar tu nginx existente

# Agregar esto a /etc/nginx/sites-available/trackhelper o similar
# Luego crear symlink: ln -s /etc/nginx/sites-available/trackhelper /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name trackhelper.fromcolombiawithcoffees.com;

    # Redirigir HTTP a HTTPS (si tienes SSL)
    # return 301 https://$server_name$request_uri;

    # Si no tienes SSL, usar esta configuraci贸n:
    location / {
        proxy_pass http://localhost:3032;  # Puerto externo del frontend
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
        proxy_read_timeout 300;
        send_timeout 300;
        
        client_max_body_size 100M;
    }

    location /api/ {
        proxy_pass http://localhost:3030;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
        proxy_read_timeout 300;
        send_timeout 300;
        
        client_max_body_size 100M;
    }
}

